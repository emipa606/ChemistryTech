    <defName>Bullet_Shell_Sarin</defName>
    <label>sarin gas shell</label>
    <projectile>
      <postExplosionSpawnThingDef>GasSarin_Gas</postExplosionSpawnThingDef>
    </projectile>
  </ThingDef>
</Defs>
